@page
@model CL.NerdLabLay_out.APP.Pages.Login.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RedBus Patios - Acceso</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        :root {
            --redbus-red: #E3000F;
            --redbus-dark: #b3000b;
            --bg-color: #f8f9fa;
        }

        body {
            background-color: var(--bg-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        #particles-js {
            position: fixed;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: -1;
            background-color: #ffffff;
        }

        .login-container {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            animation: fadeIn 0.5s;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            padding: 3rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(227, 0, 15, 0.2);
            border-top: 5px solid var(--redbus-red);
            width: 100%;
            max-width: 400px;
        }

        .btn-redbus {
            background-color: var(--redbus-red);
            color: white;
            font-weight: bold;
        }

            .btn-redbus:hover {
                background-color: var(--redbus-dark);
                color: white;
            }

        .form-floating > label {
            color: #6c757d;
        }

        .password-toggle {
            position: absolute;
            top: 50%;
            right: 15px;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6c757d;
            z-index: 10;
        }

            .password-toggle:hover {
                color: var(--redbus-dark);
            }

        .form-floating, .input-group-password {
            position: relative;
        }

            .input-group-password input {
                padding-right: 40px;
            }
    </style>
</head>
<body>
    <div id="particles-js"></div>
    <div class="login-container">
        <div class="login-card text-center">
            <h2 class="mb-4" style="color: var(--redbus-red); font-weight: bold;">
                <i class="fa-solid fa-bus"></i> Lay-out Patios
            </h2>
            <form id="loginForm" onsubmit="app.login(event)">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control border-danger" id="login-rut" placeholder="12345678-9" required oninput="app.formatRut(this)" maxlength="10">
                    <label for="login-rut"><i class="fa-solid fa-id-card me-1"></i> RUT Usuario</label>
                </div>
                <div class="form-floating mb-4">
                    <input type="password" class="form-control border-danger" id="login-pass" placeholder="Contraseña" required>
                    <label for="login-pass"><i class="fa-solid fa-lock me-1"></i> Contraseña</label>
                    <i class="fa-solid fa-eye password-toggle" onclick="app.togglePassword('login-pass', this)"></i>
                </div>
                <button type="submit" class="btn btn-redbus w-100 btn-lg" id="btn-login">
                    Ingresar <i class="fa-solid fa-arrow-right ms-2"></i>
                </button>
            </form>
        </div>
    </div>

    <div class="modal fade" id="modalChangePass" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-top border-danger border-4">
                <div class="modal-header bg-light">
                    <h5 class="modal-title text-danger fw-bold"><i class="fa-solid fa-shield-halved me-2"></i> Actualizar Contraseña</h5>
                </div>
                <div class="modal-body">
                    <p class="small text-muted mb-4">Estás ingresando con una clave temporal. Por motivos de seguridad, debes crear una nueva contraseña ahora mismo.</p>
                    <form id="changePassForm" onsubmit="app.changePassword(event)">
                        <div class="mb-3 input-group-password">
                            <label class="form-label fw-bold">Nueva Contraseña</label>
                            <input type="password" class="form-control" id="new-pass" required minlength="6" oninput="app.validatePasswordsMatch()">
                            <i class="fa-solid fa-eye password-toggle" style="top: 38px;" onclick="app.togglePassword('new-pass', this)"></i>
                        </div>
                        <div class="mb-3 input-group-password">
                            <label class="form-label fw-bold">Confirmar Nueva Contraseña</label>
                            <input type="password" class="form-control" id="confirm-pass" required minlength="6" oninput="app.validatePasswordsMatch()">
                            <i class="fa-solid fa-eye password-toggle" style="top: 38px;" onclick="app.togglePassword('confirm-pass', this)"></i>
                        </div>
                        <div id="password-match-error" class="text-danger small fw-bold mb-3" style="display: none;">
                            <i class="fa-solid fa-triangle-exclamation"></i> Las contraseñas no coinciden.
                        </div>
                        <button type="submit" class="btn btn-redbus w-100" id="btn-change-pass" disabled>
                            Guardar y Entrar <i class="fa-solid fa-check ms-1"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Html.AntiForgeryToken()
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>

    <script>
        var app = {
            changePassModal: null,
            tempRut: '',
            tempPass: '',

            init: function() {
                particlesJS("particles-js", {
                    "particles": { "number": { "value": 40 }, "color": { "value": "#E3000F" }, "shape": { "type": "circle" }, "opacity": { "value": 0.3 }, "size": { "value": 3 }, "line_linked": { "enable": true, "distance": 150, "color": "#E3000F", "opacity": 0.2, "width": 1 }, "move": { "enable": true, "speed": 2 } },
                    "interactivity": { "events": { "onhover": { "enable": true, "mode": "grab" } } }
                });
                this.changePassModal = new bootstrap.Modal(document.getElementById('modalChangePass'));
            },

            // Máscara Inteligente para RUT
            formatRut: function(input) {
                // Elimina todo lo que no sea número o K/k
                let valor = input.value.replace(/[^0-9kK]/g, '').toUpperCase();
                if (valor.length > 1) {
                    // Separa el cuerpo del dígito verificador y le pone el guión
                    let cuerpo = valor.slice(0, -1);
                    let dv = valor.slice(-1);
                    input.value = cuerpo + '-' + dv;
                } else {
                    input.value = valor;
                }
            },

            togglePassword: function(inputId, iconElement) {
                const input = document.getElementById(inputId);
                if (input.type === "password") {
                    input.type = "text";
                    iconElement.classList.replace("fa-eye", "fa-eye-slash");
                } else {
                    input.type = "password";
                    iconElement.classList.replace("fa-eye-slash", "fa-eye");
                }
            },

            validatePasswordsMatch: function() {
                const newPass = document.getElementById('new-pass').value;
                const confirmPass = document.getElementById('confirm-pass').value;
                const btnSave = document.getElementById('btn-change-pass');
                const errorMsg = document.getElementById('password-match-error');

                if (newPass && confirmPass && newPass !== confirmPass) {
                    errorMsg.style.display = 'block';
                    btnSave.disabled = true;
                } else if (newPass && confirmPass && newPass === confirmPass && newPass.length >= 6) {
                    errorMsg.style.display = 'none';
                    btnSave.disabled = false;
                } else {
                    errorMsg.style.display = 'none';
                    btnSave.disabled = true;
                }
            },

            login: function(e) {
                e.preventDefault();
                const rut = document.getElementById('login-rut').value;
                const pass = document.getElementById('login-pass').value;
                const btn = document.getElementById('btn-login');

                btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Verificando...';
                btn.disabled = true;

                fetch('?handler=Authenticate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ Rut: rut, Password: pass })
                })
                .then(response => response.json())
                .then(data => {
                    btn.innerHTML = 'Ingresar <i class="fa-solid fa-arrow-right ms-2"></i>';
                    btn.disabled = false;

                    if (data.success) {
                        if (data.requirePasswordChange) {
                            this.tempRut = rut;
                            this.tempPass = pass;
                            this.changePassModal.show();
                        } else {
                            window.location.href = data.redirectUrl; // REDIRECCIÓN ARREGLADA
                        }
                    } else {
                        Swal.fire({ icon: 'error', title: 'Acceso Denegado', text: data.message, confirmButtonColor: '#E3000F' });
                    }
                })
                .catch(err => {
                    btn.innerHTML = 'Ingresar <i class="fa-solid fa-arrow-right ms-2"></i>';
                    btn.disabled = false;
                    Swal.fire({ icon: 'error', title: 'Error de servidor', text: 'No se pudo conectar con el backend.' });
                });
            },

            changePassword: function(e) {
                e.preventDefault();
                const newPass = document.getElementById('new-pass').value;
                const confirmPass = document.getElementById('confirm-pass').value;
                const btn = document.getElementById('btn-change-pass');

                if (newPass !== confirmPass) return;

                btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Guardando...';
                btn.disabled = true;

                fetch('?handler=ChangePassword', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ Rut: this.tempRut, CurrentPassword: this.tempPass, NewPassword: newPass })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({ icon: 'success', title: '¡Actualizada!', text: 'Entrando...', showConfirmButton: false, timer: 1500 })
                        .then(() => window.location.href = data.redirectUrl);
                    } else {
                        btn.innerHTML = 'Guardar y Entrar <i class="fa-solid fa-check ms-1"></i>';
                        btn.disabled = false;
                        Swal.fire({ icon: 'error', title: 'Error', text: data.message, confirmButtonColor: '#E3000F' });
                    }
                });
            }
        };

        window.onload = () => app.init();
    </script>
</body>
</html>